@model IEnumerable<ModelEF.Model.san_pham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
    <div class="col-lg-12 form-group"
         style="margin-top:15px;">
        <div class="row">
            <div class="col-md-2">

            </div>
            <div class="col-md-4">

            </div>

            <div class="col-md-4">
                <input type="search" value="@ViewBag.SearchString" name="searchString" placeholder="Nhập từ khóa cần tìm kiếm" class="form-control" />


            </div>
            <div class="col-md-2">
                <input type="submit" value="Tìm kiếm" class="btn btn-danger" />

            </div>
        </div>

    </div>}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-3" style="background-color: white;
        margin: 10px;
        height:208px;
        padding: 10px;
        text-align: center;
        border: 1px solid #8ab4f8;
        border-radius: 10px;
        box-shadow: 12px 12px 2px 1px rgba(0, 0, 255, .2);">
            <h4> @Html.DisplayFor(modelItem => item.Name) </h4>
            <img src="~/Areas/Admin/@item.Image" alt="Alternate Text" height="100" /><br />
            @Html.DisplayFor(modelItem => item.UnitCost)<br />
            <a class="btn btn-danger btn-sm" href="@Url.Action("Detais", "Home", new {id = item.ID.Trim()})">
                Xem chi tiết
            </a>
        </div>
    }
</div>
